# FindASpot Backend Environment Variables
# yahan par backend ke liye required environment variables hain

# Database Configuration - yahan par database connection settings hain
DB_HOST=localhost
DB_PORT=3306
DB_NAME=findaspot
DB_USER=root
DB_PASSWORD=your_database_password

# SMTP Email Configuration - yahan par email server settings hain
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@findaspot.com
SMTP_USE_TLS=true

# JWT Configuration - yahan par JWT token settings hain
JWT_SECRET=your_super_secret_jwt_key_change_in_production

# Application Configuration - yahan par app specific settings hain
SPRING_PROFILES_ACTIVE=development